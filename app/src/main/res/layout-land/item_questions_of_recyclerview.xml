<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/app_bg_overlay"
    app:cardCornerRadius="15dp">



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="100"
          >

          <TextView
              android:id="@+id/questionName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="60"
              android:text="@string/questions_dummy_details"
              android:textSize="20sp"
              android:layout_margin="20dp"
              android:textAlignment="center"
              android:ellipsize="end"
              android:singleLine="true"
              android:textColor="@color/black"
              android:textStyle="bold"
              />

          <ImageView
              android:id="@+id/bookMarkIcon"
              android:layout_width="0dp"
              android:layout_height="30dp"
              android:layout_weight="20"
              android:src="@drawable/bookmark_icon"
              android:tintMode="add"
              android:layout_gravity="center"
              app:tint="@color/app_bg_overlay"
              />

          <ImageView
              android:id="@+id/answerStatus"
              android:layout_width="0dp"
              android:layout_height="30dp"
              android:layout_weight="20"
              android:src="@drawable/ic_baseline_done_outline_24"
              android:layout_gravity="center"
              android:visibility="gone"
              />
      </LinearLayout>


</androidx.cardview.widget.CardView>